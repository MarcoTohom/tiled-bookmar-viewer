
{
  "manifest_version": 3,
  "name": "Visor de Marcadores",
  "version": "1.0",
  "description": "Visualiza tus marcadores en vista lista o cuadr√≠cula.",
  "permissions": ["bookmarks", "storage", "favicon"],
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "128": "icon.png"
    },
    "default_title": "Abrir visor de marcadores"
  },
  "background": { "service_worker": "background.js" },
  "web_accessible_resources": [
    {
      "resources": ["donate.html"],
      "matches": ["<all_urls>"]
    }
  ]
}